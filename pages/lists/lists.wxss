/**lists.wxss**/
.container {
  background: #f8f8f8;
  overflow: hidden;
}
.pro-list {
  border-top: none;
  border-left: none;
  margin: 5rpx -5rpx;
}
.pro-item {
  width: 50%;
  border-right: none;
  border-bottom: none;
  padding: 0;
}
.item-box {
  display: block;
  margin: 5rpx;
  background: #fff;
  overflow: hidden;
}
.item-box .img {
  display: block;
  width: 200rpx;
  height:200rpx;
  margin:30rpx auto 20rpx; 
}
.item-box .txt {
  padding: 0 20rpx;
}

.txt .price {
  font-size: 16px;
  color: #ff4400;
}

.txt .weui-flex {
  align-items:baseline;
}

.txt .sold {
  font-size: 12px;
  color: #999;
  text-align: right;
}